{
  "name": "trash2cash",
  "version": "1.0.0",
  "description": "Turn Waste into Rewards - Smart Recycling Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install --legacy-peer-deps",
    "seed": "cd backend && npm run seed:mock",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm run lint",
    "deploy:frontend": "cd frontend && npm run build",
    "deploy:backend": "cd backend && npm start"
  },
  "keywords": [
    "recycling",
    "sustainability",
    "iot",
    "smart-bins",
    "rewards",
    "environment",
    "waste-management"
  ],
  "author": "Trash2Cash Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aashi-ghub/Trash2Cash.git"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
